<!DOCTYPE html>
<html lang="en"
      class="bg-white text-slate-900 dark:bg-[#0f172a] dark:text-slate-200 transition-colors duration-300">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mediaConverter</title>

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class'
        }
    </script>

    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- Optional: keep site.css if needed -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="min-h-screen flex flex-col">

    <!-- NAV -->
    <nav class="border-b border-slate-200 dark:border-slate-800 px-6 py-4 flex justify-between items-center bg-white/80 dark:bg-[#0f172a]/80 backdrop-blur-md sticky top-0 z-50">
        <div class="flex items-center gap-2">
            <div class="bg-indigo-600 p-1.5 rounded-lg">
                <i class="fas fa-bolt text-white"></i>
            </div>
            <span class="text-xl font-bold tracking-tight">
                SwiftConverter
            </span>
        </div>

        @* <button id="theme-toggle"
                class="p-2.5 rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-amber-400 hover:scale-110 transition-all">
            <i id="theme-icon" class="fas fa-moon"></i>
        </button> *@
    </nav>

    <!-- PAGE CONTENT -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="py-10 text-center border-t border-slate-200 dark:border-slate-800">
        <p class="text-slate-400 dark:text-slate-500 text-xs font-mono uppercase tracking-[0.3em]">
            Proof of IT completion project
        </p>
    </footer>

    <!-- THEME SCRIPT -->
    <script>
        const toggle = document.getElementById('theme-toggle');
        const icon = document.getElementById('theme-icon');
        const html = document.documentElement;

        // Optional: load saved theme
        if (localStorage.theme === 'dark') {
            html.classList.add('dark');
            icon.classList.replace('fa-moon', 'fa-sun');
        }

        toggle.addEventListener('click', () => {
            html.classList.toggle('dark');

            const isDark = html.classList.contains('dark');
            icon.classList.toggle('fa-moon', !isDark);
            icon.classList.toggle('fa-sun', isDark);

            localStorage.theme = isDark ? 'dark' : 'light';
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
