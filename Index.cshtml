@page
@model IndexModel
@{
    ViewData["Title"] = "SwiftConverter | Media Suite";
}


<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SwiftConverter | Media Suite</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            transition: background-color 0.4s ease, color 0.4s ease;
        }

        /* The Floating Hover Effect */
        .tool-card {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .dark .tool-card:hover {
            box-shadow: 0 20px 40px -15px rgba(99, 102, 241, 0.3);
            border-color: #6366f1;
        }

        .light .tool-card:hover {
            box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.1);
            border-color: #000000;
        }
    </style>
</head>
<body class="bg-white text-slate-900 dark:bg-[#0f172a] dark:text-slate-200 min-h-screen flex flex-col">
    <main class="flex-grow flex flex-col items-center justify-center px-4 py-16">
        <div class="max-w-3xl w-full text-center mb-16">
            <h1 class="text-5xl font-black mb-6 tracking-tight">Media Optimization Suite</h1>
            <p class="text-slate-500 dark:text-slate-400 text-lg">
                Fast, secure tools built for professional media processing.
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 w-full max-w-6xl">

            <a asp-page="/ImageCompression/CompressImage" class="block tool-card group p-8 rounded-3xl border border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-[#1e293b] text-center cursor-pointer hover:-translate-y-2 no-underline text-inherit">
                <div class="w-16 h-16 bg-indigo-100 dark:bg-indigo-500/10 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-6 transition-transform">
                    <i class="fas fa-file-image text-indigo-600 dark:text-indigo-400 text-2xl"></i>
                </div>
                <h3 class="font-bold text-lg text-slate-900 dark:text-slate-200">Compress Images</h3>
            </a>

            <a asp-page="/VideoCompression/CompressVideo" class="tool-card group p-8 rounded-3xl border border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-[#1e293b] text-center cursor-pointer hover:-translate-y-2">
                <div class="w-16 h-16 bg-indigo-100 dark:bg-indigo-500/10 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-6 transition-transform">
                    <i class="fas fa-video text-indigo-600 dark:text-indigo-400 text-2xl"></i>
                </div>
                <h3 class="font-bold text-lg">Compress Videos</h3>
            </a>

            <a asp-page="/ImageConversion/ImageConversion" class="tool-card group p-8 rounded-3xl border border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-[#1e293b] text-center cursor-pointer hover:-translate-y-2">
                <div class="w-16 h-16 bg-emerald-100 dark:bg-emerald-500/10 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-6 transition-transform">
                    <i class="fas fa-photo-video text-emerald-600 dark:text-emerald-400 text-2xl"></i>
                </div>
                <h3 class="font-bold text-lg">Convert Images</h3>
            </a>

            <a asp-page="/VideoConversion/VideoConversion" class="tool-card group p-8 rounded-3xl border border-slate-200 dark:border-slate-800 bg-slate-50 dark:bg-[#1e293b] text-center cursor-pointer hover:-translate-y-2">
                <div class="w-16 h-16 bg-emerald-100 dark:bg-emerald-500/10 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:rotate-6 transition-transform">
                    <i class="fas fa-film text-emerald-600 dark:text-emerald-400 text-2xl"></i>
                </div>
                <h3 class="font-bold text-lg">Convert Videos</h3>
            </a> 
        </div>
    </main>
    <script>
        const themeToggle = document.getElementById('theme-toggle');
        const themeIcon = document.getElementById('theme-icon');
        const html = document.documentElement;

        themeToggle.addEventListener('click', () => {
            if (html.classList.contains('dark')) {
                html.classList.replace('dark', 'light');
                themeIcon.classList.replace('fa-moon', 'fa-sun');
            } else {
                html.classList.replace('light', 'dark');
                themeIcon.classList.replace('fa-sun', 'fa-moon');
            }
        });
    </script>
</body>
</html>